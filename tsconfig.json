{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}